{
  "name": "express-api",
  "version": "0.1.0",
  "description": "express/knex/pg api with tests",
  "main": "index.js",
  "scripts": {
    "db": "knex",
    "generate": "plop",
    "knex": "knex",
    "lint": "prettier --check .",
    "lint-fix": "prettier --write .",
    "start": "NODE_ENV=production node ./index.js",
    "start-dev": "NODE_ENV=development npx --quiet nodemon",
    "test": "NODE_ENV=test jest --detectOpenHandles --runInBand --forceExit"
  },
  "keywords": [
    "node",
    "express",
    "knex",
    "postgres",
    "jest",
    "supertest"
  ],
  "author": "Richard Davis <rdavis.bacs@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "knex": "^0.21.5",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.3.3"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "plop": "^2.7.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "supertest": "^4.0.2"
  },
  "_moduleAliases": {
    "@root": "./",
    "@src": "./src"
  },
  "jest": {
    "moduleNameMapper": {
      "@root(.*)$": "<rootDir>/$1",
      "@src(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
